{
  "name": "mirrorx",
  "version": "0.2.8",
  "description": "A React framework with minimal API and zero boilerplate.",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint src test",
    "build": "rm -rf lib && babel src -d lib --no-comments",
    "bundle": "webpack && webpack -p --output-filename mirror.min.js"
  },
  "keywords": [
    "framework",
    "react",
    "redux",
    "mirror",
    "mirrorx",
    "react-router",
    "front-end"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:mirrorjs/mirror.git"
  },
  "license": "MIT",
  "dependencies": {
    "history": "^4.7.2",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.6",
    "redux": "^3.6.0"
  },
  "peerDependencies": {
    "react": ">=15",
    "react-dom": ">=15",
    "prop-types": ">=15"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.14.1",
    "babel-preset-react": "^6.14.1",
    "babel-preset-stage-2": "^6.14.1",
    "coveralls": "^2.13.3",
    "eslint": "^4.9.0",
    "eslint-plugin-react": "^7.4.0",
    "jest": "^20.0.4",
    "prop-types": ">=15",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "webpack": "^3.8.1"
  },
  "files": [
    "lib/",
    "docs/",
    "index.js",
    "router.js",
    "README.md",
    "LICENSE"
  ],
  "jest": {
    "modulePaths": [
      "<rootDir>/src"
    ],
    "setupFiles": [
      "<rootDir>/setupTests.js"
    ],
    "testRegex": "(/test/.*\\.spec\\.js)$",
    "testURL": "http://localhost"
  }
}
